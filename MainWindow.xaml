<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Game of life" Height="1080" Width="1080" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Height="20" Width="20" Name="PlayButton" Click="PlayPause"></Button>
            <UniformGrid x:Name="GamePanel" Rows="100" Columns="100" Width="800" Height="800" Margin="100 0
            "></UniformGrid>
        </StackPanel>
    </Grid>
</Window>
